<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="@dimen/top_margirn">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <EditText
                android:layout_marginLeft="@dimen/side_margirn"
                android:padding="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:singleLine="true"
                android:id="@+id/c_name"
                android:hint="Enter Name"
                android:layout_marginRight="@dimen/side_margirn"
                android:layout_marginTop="15dp" />


        </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top_margirn">

                <EditText
                    android:singleLine="true"
                    android:hint="Enter Email"
                    android:layout_marginLeft="@dimen/side_margirn"
                    android:layout_marginRight="@dimen/side_margirn"
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:ems="10"
                    android:id="@+id/c_email"
                    android:layout_marginTop="15dp"
                    />



            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/top_margirn"
                android:textColorHint="#b62dc2">

                <EditText
                    android:hint="Enter Complaint Details"
                    android:padding="5dp"
                    android:layout_marginRight="@dimen/side_margirn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textMultiLine"
                    android:ems="10"
                    android:id="@+id/c_details"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="@dimen/side_margirn"
                    android:lines="15"
                    android:gravity="top"
                    />

            </android.support.design.widget.TextInputLayout>


            <Button
                android:layout_marginLeft="@dimen/side_margirn"

                android:text="Submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/button3"
                android:layout_marginTop="15dp"
                android:onClick="addComplaints"
                android:background="@drawable/buttons_layout"/>
        </LinearLayout>

    </android.support.design.widget.CoordinatorLayout>

</ScrollView>